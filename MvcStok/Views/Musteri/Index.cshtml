@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    <b> Aranacak Müşteri Adı:</b>@Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            }

<a href="/Musteri/MusteriEkle/" class="btn btn-primary">Yeni Müşteri Ekle</a>
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <th>@mstr.MUSTERIID</th>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYAD</td>
                <td><a href="/Musteri/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("Sil ", "Sil", new { id = mstr.MUSTERIID }, new { @class="btn btn-danger", onclick="return confirm('Silmek İstediğinize Emin Misiniz?')"})</td>

            </tr>
        }
    </tbody>
</table>

